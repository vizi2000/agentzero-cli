#!/bin/bash
# Agent Zero TUI - Full graphical terminal interface
# Like a full IDE in terminal with panels, menus, themes

DIR="$(cd "$(dirname "$0")" && pwd)"
cd "$DIR"

# Clean Python cache
find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null
find . -name "*.pyc" -delete 2>/dev/null

# Use venv if available
if [ -x "venv/bin/python" ]; then
    exec venv/bin/python main_new.py "$@"
elif [ -x "venv/bin/python3" ]; then
    exec venv/bin/python3 main_new.py "$@"
else
    exec python3 main_new.py "$@"
fi
